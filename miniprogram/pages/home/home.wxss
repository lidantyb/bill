.header{
  background-color: #26b59a;
  height: 290rpx;
  color: #fff;
  padding: 0 30rpx;
  position: sticky;  /*黏贴定位*/
  top: 0;
}
/* 结余样式 */
.surplusBox{
  text-align: center;
}
.surplusBox .surTitle{
  font-size: 28rpx;
}
.surplusBox .surMoney{
  font-size: 50rpx;
}
/* 收入支出样式 */
.costItem{
  width: 50%;
  text-align: center;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}
.pr{
  padding-right: 90rpx;
}
.pl{
  padding-left: 90rpx;
}
.costItem .costMoney{
  /* 单行文本超出隐藏并且以...代替 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 记一笔按钮 样式 */
.penBox{
  position: sticky;
  top: 290rpx;
  height: 90rpx;
  /* background-color: #fff; */
}
.penBox .penBtn{
  position: absolute;
  top: -90rpx;
  left: 50%;
  margin-left: -90rpx;
  width: 180rpx;
  height: 180rpx;
  background-color: #fff;
  border-radius: 50%;
}
.penBox .penBtn .pen{
  width: 140rpx;
  height: 140rpx;
  background-color: #26b59a;
  border-radius: 50%;
  margin: 20rpx;
}
.penBox .penBtn .pen image{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
}
/* 数据列表样式 */
.dataListBox{
  padding: 0 20rpx;
}
.dataInfo{
  color: #999;
  font-size: 24rpx;
}
.dataInfo .dataTime text{
  margin-right: 10rpx;
}
.dataInfo .dataCost text{
  margin-left: 10rpx;
}

/* 数据样式 */
.listItem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}
.listItem .listLeft image{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
}
.listItem .listLeft text,
.listItem .listRight{
  font-weight: bold;
  font-size: 36rpx;
}

/* 没有数据的样式 */
.nothingIcon{
  width: 250rpx;
  height: 162rpx;
  margin: 150rpx auto 0;
}
.nothingIcon image{
  width: 100%;
  height: 100%;
}
.nothingText{
  text-align: center;
  color: #999;
}