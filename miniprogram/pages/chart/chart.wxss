@import "./chart.skeleton.wxss";
page{
  background: #eee;
}
.chart-nav{
  height: 60rpx;
  background-color: #26b59a;
  display: flex;
  align-items: center;
  padding: 20rpx;
} 

.select-date{
  width: calc(100% - 240rpx);
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
  color: #444;
  font-size: 28rpx;
}

.date-type{
  width: 160rpx;
  height: 60rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #444;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.type-nav{
  display: flex;
  align-items: center;
  height: 120rpx;
  background-color: #26b59a;
}

.type-nav-item{
  flex: 1;
  display: flex;
}

.type-nav-title{
  margin: 0 auto;
  font-size: 28rpx;
  text-align: center;
  font-weight: bold;
  color: #fff;
  padding: 10rpx;
}


.active-sr{
  color: #D13B2E;
}

.active-zc{
  color: #D13B2E;
}

.pie-box{
  margin: 10rpx 0;
  height: 630rpx;
  background-color: #fff;
}

ec-canvas {
  width: 100%;
  height: 100%;
}


.type-data{
  margin-top: 10rpx;
}