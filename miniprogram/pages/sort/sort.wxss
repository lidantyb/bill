/* pages/sort/sort.wxss */
/* 数据列表样式 */
.dataListBox{
   padding: 0 20rpx;
 }
 .dataInfo{
   color: #999;
   font-size: 24rpx;
 }
 .dataInfo .dataTime text{
   margin-right: 10rpx;
 }
 .dataInfo .dataCost text{
   margin-left: 10rpx;
 }
 
 /* 数据样式 */
 .listItem{
   display: flex;
   justify-content: space-between;
   align-items: center;
   margin: 20rpx 0;
 }
 .listItem .listLeft image{
   width: 100rpx;
   height: 100rpx;
   vertical-align: middle;
 }
 .listItem .listLeft text,
 .listItem .listRight{
   font-weight: bold;
   font-size: 36rpx;
 }
 
 /* 没有数据的样式 */
 .nothingIcon{
   width: 250rpx;
   height: 162rpx;
   margin: 150rpx auto 0;
 }
 .nothingIcon image{
   width: 100%;
   height: 100%;
 }
 .nothingText{
   text-align: center;
   color: #999;
 }